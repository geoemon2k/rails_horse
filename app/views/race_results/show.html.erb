race_result/show
レース名: <%= @program.year %>/<%= @program.month %>/<%= @program.day %> <%= @program.name %><br>
<table border=1>
  <tr>
    <td>着</td>
    <td>差</td>
    <td>馬</td>
    <td>枠</td>
    <td>馬名</td>
    <td>騎手</td>
    <td>タイム</td>
    <td>3ハロン</td>
  </tr>
  <% @race_results.each do |result| %>
  <tr>
    <td><%= result.rank %></td>
    <td><%= result.chakusa %></td>
    <td><%= result.uma_num %></td>
    <td><%= result.waku_num %></td>
    <td><%= link_to result.horse.name, horse_path(result.horse_id) %></td>
    <td><%= result.jockey.name %></td>
    <td><%= result.total_time %></td>
    <td><%= result.time_3f %></td>
    <td><%= link_to '調教', training_path(result.horse_id) %></td>
  </tr>
<% end %>
</table>

